<header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
        <%= link_to image_tag("abtrivia_logo_02.JPG", border: 0, height: 50), {action: 'home', controller: 'pages'}, class: 'dock-item', id: "logo" %>

        <% if logged_in? %>
            <!-- If logged in, view my history link -->
            <div class="nav_item">
                <%= link_to "My History", player_history_path, class: "btn btn-default btn-ab-nav" %>
            </div>

            <!-- Username dropdown menu -->
            <ul class="nav_item pull-right no-disc-list">
                <li class="dropdown">
                    <%= link_to("#", class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown") do %>
                        <%= current_user().display_name %> <b class="caret"></b>
                    <% end %>
                    <ul class="dropdown-menu">
                        <li><%= link_to("My History", player_history_path) %></li>
                        <li class="divider"></li>
                        <li><%= link_to("Logout", logout_path) %></li>
                    </ul>
                </li>
            </ul>

        <% else %>
            <!-- Register and login links-->
            <div class="nav_item pull-right">
                <%= link_to "Register", register_path, class: "btn btn-default btn-ab-nav" %>
                <%= link_to "Login", login_path, class: "btn btn-default btn-success" %>
            </div>
        <% end %>
    </div>
</header>