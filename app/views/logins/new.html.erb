<%= render "shared/simple_title", title: "Log In" %>
<div class="row">
    <div class="well col-lg-6 col-md-6 col-sm-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
        <%= form_tag("/login") do %>
            <%= label_tag(:email) %>
            <%= text_field_tag(:email) %>

            <%= submit_tag("Login", class: "btn btn-success") %>

        <% end %>
        <br>
        <div class="center">
            <%= link_to "Not yet registered? Sign up!", register_path %>
        </div>
    </div>
</div>