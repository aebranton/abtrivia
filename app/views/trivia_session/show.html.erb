<div class="trivia-session-id-embed" id="ab-session-id" data-trivia-session-id="<%= @trivia_session.id %>">
</div>
<div class="trivia-session-id-embed" id="ab-player-id" data-trivia-player-id="<%= current_user.id %>">
</div>

<%= javascript_pack_tag 'custom/trivia_session', 'data-turbolinks-track': 'reload' %>

<!-- I know this is awful and ugly but i can NOT get webpacker to work here... -->
