<%= render("shared/simple_title", title: "Register") %>

<%= render("shared/form_errors", obj: @player) %>

<div class="row">
    <div class="well col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        <%= form_for(@player, url: register_path) do |p| %>
            <%= p.label(:display_name, "Display Name") %>
            <%= p.text_field(:display_name) %>

            <%= p.label(:email) %>
            <%= p.text_field(:email) %>
            <br>
            <br>
            <%= p.submit("Register", class: 'btn btn-success')%>
        <% end %>
        <br>
        <div class="center">
            <%= link_to "Already registered? Log in!", login_path %>
        </div>
    </div>
</div>